<resources>
    <style name="AppTheme.System" parent="AppThemeBase.System">
        <item name="icActionNext">@drawable/ic_action_next_item_ref</item>
        <item name="icActionPrevious">@drawable/ic_action_previous_item_ref</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Light" parent="AppThemeBase.Light">
        <item name="icActionNext">@drawable/ic_action_next_item_light</item>
        <item name="icActionPrevious">@drawable/ic_action_previous_item_light</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Dark" parent="AppThemeBase.Dark">
        <item name="icActionNext">@drawable/ic_action_next_item</item>
        <item name="icActionPrevious">@drawable/ic_action_previous_item</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DarkThemeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/grey_850</item>
        <item name="android:textColor">@color/grey_200</item>
    </style>
    <style name="LightThemeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/grey_200</item>
        <item name="android:textColor">@color/grey_850</item>
    </style>

</resources>
