<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/table_head_set"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <ImageView android:id="@+id/icon_time_sunset" style="@style/TableHeadImageView"
            android:background="@drawable/ic_sunset" android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/label_time_sunset"
            app:layout_constraintEnd_toEndOf="@+id/label_time_sunset"
            app:layout_constraintWidth_min="@dimen/table_heading_iconsize_min"
            app:layout_constraintWidth_max="@dimen/table_heading_iconsize_max"
            tools:ignore="contentDescription" />

        <TextView android:id="@+id/label_time_sunset" style="@style/TableHeadTextView"
            android:text="@string/sunset_short" android:textColor="@color/sunIcon_color_setting"
            app:layout_constraintTop_toBottomOf="@+id/icon_time_sunset"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_min="@dimen/table_heading_label_mindim"
            app:layout_constraintWidth_max="@dimen/table_heading_label_maxdim"/>

    </android.support.constraint.ConstraintLayout>

</merge>