<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetframe_outer_3x1"
    style="@style/SunsetTimeWidgetFrame" android:layout_width="match_parent">

    <LinearLayout android:id="@+id/widgetframe_inner" style="@style/SunsetTimeWidget"
        android:orientation="vertical" android:layout_width="match_parent">

        <TextView android:id="@+id/text_title" style="@style/SunsetTimeTextTitleView"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="start" tools:text="title" />

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" android:weightSum="4">

            <LinearLayout
                android:id="@+id/moonphase_new_layout"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:minWidth="60dp" android:layout_weight="1"
                android:gravity="center" android:orientation="vertical" android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/moonphase_new_icon"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_moon_new" />

                <TextView
                    android:id="@+id/moonphase_new_date"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/SunsetTimeTextView" tools:text="February 15, 8:00 AM" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/moonphase_firstquarter_layout"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:minWidth="60dp" android:layout_weight="1"
                android:gravity="center" android:orientation="vertical" android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/moonphase_firstquarter_icon"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_moon_waxing_quarter" />

                <TextView
                    android:id="@+id/moonphase_firstquarter_date"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/SunsetTimeTextView" tools:text="February 15, 8:00 AM" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/moonphase_full_layout"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:minWidth="60dp" android:layout_weight="1"
                android:gravity="center" android:orientation="vertical" android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/moonphase_full_icon"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_moon_full" />

                <TextView
                    android:id="@+id/moonphase_full_date"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/SunsetTimeTextView" tools:text="February 15, 8:00 AM" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/moonphase_thirdquarter_layout"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:minWidth="60dp" android:layout_weight="1"
                android:gravity="center" android:orientation="vertical" android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/moonphase_thirdquarter_icon"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_moon_waning_quarter" />

                <TextView
                    android:id="@+id/moonphase_thirdquarter_date"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/SunsetTimeTextView" tools:text="February 15, 8:00 AM" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>