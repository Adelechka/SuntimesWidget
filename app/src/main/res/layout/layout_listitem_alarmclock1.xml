<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_alarmcard0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_alarmcard"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginTop="4dp"
        android:orientation="vertical" android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:id="@+id/layout_header" android:visibility="visible"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_marginTop="6dp" android:layout_marginBottom="0dp">

            <ImageButton
                android:id="@+id/type_menu"
                android:layout_width="32dp" android:layout_height="32dp"
                android:src="?attr/icActionAlarm"
                style="?attr/actionOverflowButtonStyle"
                tools:ignore="ContentDescription" /> <!-- content description provided by AlarmClockAdapter -->

            <EditText
                android:id="@+id/edit_label"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp" android:layout_marginLeft="4dp"
                android:textColor="?attr/text_buttonSelector"
                android:textStyle="bold" android:maxLines="1"
                android:hint="label" tools:text="label" />

            <ImageButton
                android:id="@+id/overflow_menu"
                android:layout_width="32dp" android:layout_height="32dp"
                android:contentDescription="@string/configAction_alarmMenu"
                style="?attr/actionOverflowButtonStyle" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
            android:text="Schedule:" />

        <LinearLayout style="@style/ChipTray"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout android:id="@+id/chip_offset"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="start|center_vertical"
                android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                <TextView
                    android:id="@+id/text_offset" style="@style/ChipText"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:text="1h 30m before" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="start|center_vertical"
                android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                <FrameLayout android:id="@+id/chip_event"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView android:id="@+id/text_event" style="@style/ChipText1"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:drawableLeft="?attr/icActionTime" android:drawableStart="?attr/icActionTime"
                        tools:text="Nautical Twilight (end)" />

                </FrameLayout>

                <FrameLayout android:id="@+id/chip_location"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView android:id="@+id/text_location" style="@style/ChipText1"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:drawableLeft="?attr/icActionPlace" android:drawableStart="?attr/icActionPlace"
                        tools:text="Location" />

                </FrameLayout>

            </LinearLayout>

            <FrameLayout android:id="@+id/chip_repeat"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_gravity="start" android:padding="0dp"
                android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                <TextView android:id="@+id/text_repeat" style="@style/ChipText1"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:drawableLeft="?attr/icActionCalendar" android:drawableStart="?attr/icActionCalendar"
                    android:text="@string/alarmOption_repeat" tools:text="Sun, Mon, Tue, Wed, Thu, Fri" />

            </FrameLayout>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_main1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/option_offset_display"
                android:layout_width="wrap_content" android:layout_height="wrap_content"

                android:textColor="?attr/text_buttonSelector" android:gravity="center"
                android:textSize="12sp" android:maxLines="1" android:ellipsize="end"
                tools:text="1h 30m before" android:minEms="5"

                app:layout_constraintStart_toStartOf="@+id/text_datetime"
                app:layout_constraintEnd_toEndOf="@+id/text_datetime"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_datetime"
                android:layout_width="0dp" android:layout_height="67dp"
                android:layout_marginTop="8dp" android:layout_marginBottom="32dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="?attr/text_buttonSelector"
                android:textSize="52dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage"
                tools:text="11:22 am" />

            <TextView
                android:id="@+id/text_date" android:visibility="visible"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="June 21, 2019"
                android:gravity="center_horizontal"
                android:textSize="12sp" android:maxLines="1" android:ellipsize="end" android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@id/text_datetime"
                app:layout_constraintEnd_toEndOf="@+id/text_datetime"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_options"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="start|center_vertical" android:orientation="vertical"
            android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginTop="0dp" android:layout_marginBottom="4dp">

            <LinearLayout android:id="@+id/option_chips" android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/option_repeat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                    android:text="On Alert:" />

                <LinearLayout style="@style/ChipTray"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_chips0"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:gravity="start|center_vertical" android:orientation="horizontal"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                        <!--<TextView android:id="@+id/text_ringtone" style="@style/ChipText1"
                            android:layout_width="0dp" android:layout_weight="1"
                            android:drawableLeft="?attr/icActionSoundDisabled" android:drawableStart="?attr/icActionSoundDisabled"
                            tools:text="No Sound" />-->

                        <FrameLayout android:id="@+id/chip_ringtone"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_ringtone"
                                style="@style/ChipText1"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:button="@android:color/transparent"
                                android:drawableLeft="?attr/icActionSoundDisabled" android:drawableStart="?attr/icActionSoundDisabled"
                                tools:text="No Sound" />

                        </FrameLayout>


                        <FrameLayout style="@style/ChipArea" android:id="@+id/chip_vibrate"
                            android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="match_parent">

                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/check_vibrate" style="@style/ChipTextBase"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:gravity="center_vertical" android:layout_gravity="center_vertical|start"
                                android:text="@string/alarmOption_vibrate" android:checked="true" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_chips1"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:gravity="start|center_vertical" android:orientation="horizontal"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                        <FrameLayout android:id="@+id/chip_action0"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_action0"
                                style="@style/ChipText1"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:button="@android:color/transparent"
                                android:drawableLeft="?attr/icActionExtension" android:drawableStart="?attr/icActionExtension"
                                tools:text="No Action" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                    android:text="On Dismiss:"/>

                <LinearLayout
                    android:id="@+id/layout_options1" style="@style/ChipTray"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:gravity="start|center_vertical" android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp">

                        <FrameLayout android:id="@+id/chip_action1"
                            android:layout_width="wrap_content" android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_action1"
                                style="@style/ChipText1"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:button="@android:color/transparent"
                                android:drawableLeft="?attr/icActionExtension" android:drawableStart="?attr/icActionExtension"
                                tools:text="No Action" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>