<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="?attr/dialogBackground">

        <TextView
            android:id="@+id/appwidget_schedalarm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?dialogPreferredPadding" android:layout_marginRight="?dialogPreferredPadding"
            android:layout_marginLeft="?dialogPreferredPadding" android:layout_marginStart="?dialogPreferredPadding"
            android:layout_marginTop="10dp"
            android:text="@string/configLabel_schedalarm_mode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/appwidget_schedalarm_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?dialogPreferredPadding"
            android:layout_marginLeft="?dialogPreferredPadding"
            android:layout_marginRight="?dialogPreferredPadding"
            android:layout_marginStart="?dialogPreferredPadding"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appwidget_schedalarm_label" />

        <LinearLayout
            android:id="@+id/appwidget_schedalarm_note_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?dialogPreferredPadding"
            android:layout_marginLeft="?dialogPreferredPadding"
            android:layout_marginRight="?dialogPreferredPadding"
            android:layout_marginStart="?dialogPreferredPadding"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appwidget_schedalarm_mode">

            <ImageView
                android:id="@+id/appwidget_schedalarm_note_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icActionAbout"
                android:visibility="gone"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/appwidget_schedalarm_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/schedalarm_dialog_note" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/appwidget_schedalarm_options_layout"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/hrColor"
            android:orientation="horizontal" android:gravity="center_vertical|end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appwidget_schedalarm_note_layout">

            <CheckBox
                android:id="@+id/appwidget_schedalarm_daily"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                android:layout_marginLeft="?dialogPreferredPadding" android:layout_marginStart="?dialogPreferredPadding"
                android:text="Update this alarm daily" />

            <ImageButton
                android:id="@+id/appwidet_schedalarm_daily_config"
                android:layout_width="48dp" android:layout_height="48dp"
                android:layout_marginEnd="?dialogPreferredPadding" android:layout_marginRight="?dialogPreferredPadding"
                android:src="?attr/icActionSettings" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

