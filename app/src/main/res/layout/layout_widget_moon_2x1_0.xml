<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    style="@style/SunsetTimeWidgetFrame"
    android:id="@+id/widgetframe_outer_1x3">

    <LinearLayout
        style="@style/SunsetTimeWidget"
        android:id="@+id/widgetframe_inner"
        android:orientation="vertical">

        <TextView style="@style/SunsetTimeTextTitleView"
            android:id="@+id/text_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:divider="@drawable/ic_spacer"
            android:orientation="horizontal"
            android:showDividers="middle">

            <include layout="@layout/icons_moon_phases" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_info_moonphase"
                    style="@style/SunsetTimeTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="New Moon" />

                <TextView
                    android:id="@+id/text_info_moonillum"
                    style="@style/SunsetTimeTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0% illuminated" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/SunsetTimeLayout"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/ic_spacer"
            tools:ignore="UnusedAttribute">

            <include layout="@layout/info_time_moonrise" />
            <include layout="@layout/info_time_moonset" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>