<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="?attr/timeCardBackground"
        android:orientation="horizontal"
        android:padding="4dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@android:id/text1"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall" android:textStyle="bold" android:singleLine="true"
                tools:text="label" />

            <Switch
                android:id="@+id/switch_enabled"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="4dp" android:layout_marginStart="4dp" />

            <ImageButton
                android:id="@+id/overflow_menu"
                android:layout_width="32dp" android:layout_height="32dp"
                style="?attr/actionOverflowButtonStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:22"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/layout_options"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_header" />

        <ImageView
            android:id="@android:id/icon1"
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_sunrise_large0"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@android:id/text2"
            app:layout_constraintTop_toTopOf="@android:id/text2"
            app:layout_constraintBottom_toBottomOf="@android:id/text2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:text="Civil Twilight"
            android:textSize="12sp"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/layout_header"
            tools:text="Civil Twilight" />

        <TextView
            android:id="@+id/text_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="?attr/icActionPlace"
            android:drawableStart="?attr/icActionPlace"
            android:gravity="center_vertical"
            android:text="Location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@android:id/text2" />

        <LinearLayout
            android:id="@+id/layout_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_label">

            <TextView
                android:id="@+id/text_ringtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:drawableLeft="?attr/icActionAlarm"
                android:gravity="center_vertical"
                android:text="ringtone"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Vibrate" />

            <CheckBox
                android:id="@+id/check_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                app:layout_constraintStart_toEndOf="@android:id/text2" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>