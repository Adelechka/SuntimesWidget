<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical" android:gravity="center">

    <LinearLayout android:id="@+id/color_layout_r"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <SeekBar android:id="@+id/color_seek_r"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView android:id="@+id/color_label_r" android:labelFor="@+id/color_edit_r"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:text="@string/color_dialog_label_r" android:textStyle="bold" />

        <EditText android:id="@+id/color_edit_r"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="@string/color_dialog_hint_rgba" android:minEms="3"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout android:id="@+id/color_layout_g"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <SeekBar android:id="@+id/color_seek_g"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView android:id="@+id/color_label_g" android:labelFor="@+id/color_edit_g"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:text="@string/color_dialog_label_g" android:textStyle="bold" />

        <EditText android:id="@+id/color_edit_g"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="@string/color_dialog_hint_rgba" android:minEms="3"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout android:id="@+id/color_layout_b"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <SeekBar android:id="@+id/color_seek_b"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView android:id="@+id/color_label_b" android:labelFor="@+id/color_edit_b"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:text="@string/color_dialog_label_b" android:textStyle="bold" />

        <EditText android:id="@+id/color_edit_b"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="@string/color_dialog_hint_rgba" android:minEms="3"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout android:id="@+id/color_layout_a"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <SeekBar android:id="@+id/color_seek_a"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView android:id="@+id/color_label_a" android:labelFor="@+id/color_edit_a"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:text="@string/color_dialog_label_a" android:textStyle="bold" />

        <EditText android:id="@+id/color_edit_a"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="@string/color_dialog_hint_rgba" android:minEms="3"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout android:id="@+id/color_layout_hex"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <EditText android:id="@+id/color_edit_hex"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:hint="@string/color_dialog_hint_hex" android:minEms="6" android:gravity="center"
            android:inputType="textCapCharacters" />

    </LinearLayout>



</LinearLayout>