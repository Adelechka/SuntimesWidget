<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:id="@+id/layout_daylength"
                  android:orientation="vertical"
                  android:layout_width="wrap_content" android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <TextView style="@style/SunsetTimeTextView"
                      android:id="@+id/text_daylength"
                      android:text=""
                      tools:text="12h"
                      android:paddingLeft="0dp"
                      android:paddingRight="5dp" android:paddingEnd="5dp"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/text_daylength_label"
                      android:text="@string/length_day"
                      android:paddingLeft="0dp"
                      android:paddingRight="5dp" android:paddingEnd="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView style="@style/SunsetTimeTextView"
                      android:id="@+id/text_lightlength"
                      android:text=""
                      tools:text="12h 35m"
                      android:paddingLeft="0dp"
                      android:paddingRight="5dp" android:paddingEnd="5dp"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/text_lightlength_label"
                      android:text="@string/length_light"
                      android:paddingLeft="0dp"
                      android:paddingRight="5dp" android:paddingEnd="5dp" />

        </LinearLayout>

    </LinearLayout>
</merge>