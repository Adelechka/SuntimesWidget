<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    style="@style/SunsetTimeWidget"
    android:id="@+id/widgetframe_inner"
    android:layout_height="match_parent">

    <TextView style="@style/SunsetTimeTextTitleView"
        android:id="@+id/text_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="start" android:visibility="visible"
        tools:text="title" android:layout_marginBottom="-3dp" />

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="center" android:orientation="vertical">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView style="@style/SunsetTimeTextView"
                android:id="@+id/info_sun_azimuth_current_label"
                android:text="Azimuth:" android:labelFor="@+id/info_sun_azimuth_current"
                android:gravity="start" />

            <TextView style="@style/SunsetTimeTextView"
                android:id="@+id/info_sun_azimuth_current"
                android:text="" tools:text="12:01" />

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView style="@style/SunsetTimeTextView"
                android:id="@+id/info_sun_azimuth_elevation_label"
                android:text="Elevation:" android:labelFor="@+id/info_sun_azimuth_current"
                android:gravity="start" />

            <TextView style="@style/SunsetTimeTextView"
                android:id="@+id/info_sun_elevation_current"
                android:text="" tools:text="48" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>