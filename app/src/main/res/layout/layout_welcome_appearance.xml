<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/dialogBackgroundAlt"
    android:paddingBottom="48dp">

    <LinearLayout android:id="@+id/icon_layout" android:background="?attr/dialogBackgroundAlt"
        android:layout_width="0dp" android:layout_height="0dp"
        android:gravity="center" android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_layout"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/icon" android:visibility="gone"
            android:layout_width="128dp" android:layout_height="128dp" android:layout_margin="8dp"
            android:scaleType="fitCenter" android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_action_suntimes_huge" android:tint="?attr/colorControlHighlight"
            tools:ignore="ContentDescription" />

        <TextView android:visibility="gone"
            android:id="@+id/text0"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:gravity="center" android:textSize="36sp"
            android:textColor="?attr/date_buttonSelector" android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text1" android:visibility="gone"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:gravity="start" android:layout_margin="8dp"
            android:text="@string/welcome_message" />

        <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:gravity="start" android:layout_gravity="start"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="?attr/text_size_xlarge"
            android:textColor="?attr/date_buttonSelector" android:textStyle="bold"
            android:text="@string/configLabel_appearance" />

        <FrameLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="?attr/dialogBackground"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                style="@style/SunsetTimeCard" android:layout_margin="16dp"
                android:padding="8dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/table" style="@style/SunsetTimeLayout"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_gravity="start" android:minWidth="400dp"
                    tools:layout_editor_absoluteX="0dp" tools:layout_editor_absoluteY="0dp">

                    <!-- Header: date -->
                    <TextView android:visibility="visible"
                        android:id="@+id/text_date" style="@style/TableHeadDateView"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        tools:text="Theme\nPreview"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/header_gutter0"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Header: gutter0 -->
                    <LinearLayout
                        android:id="@+id/header_gutter0"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date"
                        app:layout_constraintStart_toEndOf="@+id/text_date"
                        app:layout_constraintEnd_toStartOf="@+id/header_time_sunrise"
                        android:orientation="vertical">
                    </LinearLayout>

                    <View android:id="@+id/header_column" android:elevation="0dp"
                        android:layout_width="0dp" android:layout_height="2dp"
                        android:background="@color/transparent" android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_time_sunrise_actual" app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Header: sunrise -->
                    <LinearLayout
                        android:id="@+id/header_time_sunrise"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/table_rise_leftMargin" android:layout_marginStart="@dimen/table_rise_leftMargin"
                        android:layout_marginTop="8dp"
                        android:minWidth="46dp" android:minHeight="16dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date"
                        app:layout_constraintStart_toEndOf="@+id/header_gutter0"
                        app:layout_constraintEnd_toStartOf="@+id/header_time_sunset"
                        android:orientation="vertical" android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|right"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_time_sunrise"
                                style="@style/TableHeadImageView"
                                android:layout_width="@dimen/table_heading_iconsize"
                                android:background="?attr/sunriseIconSmall"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_margin="0dp"
                                tools:ignore="contentDescription"/>

                            <TextView android:id="@+id/label_time_sunrise" style="@style/TableHeadTextView"
                                android:text="@string/sunrise_short" android:textColor="?attr/sunriseColor"
                                android:maxWidth="@dimen/table_heading_label_maxdim" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Header: sunset -->
                    <LinearLayout
                        android:id="@+id/header_time_sunset"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/table_set_leftMargin" android:layout_marginStart="@dimen/table_set_leftMargin"
                        android:layout_marginTop="8dp"
                        android:minWidth="@dimen/table_cell_minwidth" android:minHeight="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date"
                        app:layout_constraintStart_toEndOf="@+id/header_time_sunrise"
                        app:layout_constraintEnd_toStartOf="@+id/header_gutter1"
                        android:orientation="vertical" android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|right"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_time_sunset"
                                style="@style/TableHeadImageView"
                                android:layout_width="@dimen/table_heading_iconsize"
                                android:background="?attr/sunsetIconSmall"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_margin="0dp"
                                tools:ignore="contentDescription"/>

                            <TextView
                                android:id="@+id/label_time_sunset"
                                style="@style/TableHeadTextView"
                                android:maxWidth="@dimen/table_heading_label_maxdim"
                                android:text="@string/sunset_short"
                                android:textColor="?attr/sunsetColor"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Header: gutter1 -->
                    <LinearLayout
                        android:id="@+id/header_gutter1"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/header_time_sunset"
                        android:orientation="vertical">
                    </LinearLayout>

                    <!-- Civil -->
                    <TextView
                        android:id="@+id/text_time_label_civil"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginBottom="@dimen/table_cell_spacing"
                        android:layout_marginTop="@dimen/table_cell_spacing"
                        android:text="@string/timeMode_civil_short"
                        app:layout_constraintTop_toBottomOf="@+id/header_time_sunset"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/text_time_sunrise_civil"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginEnd="@dimen/table_rise_rightMargin"
                        android:layout_marginRight="@dimen/table_rise_rightMargin"
                        android:textColor="?attr/table_risingColor"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_time_label_civil"
                        app:layout_constraintEnd_toEndOf="@+id/header_time_sunrise"
                        android:text="5:30 AM"/>

                    <TextView
                        android:id="@+id/text_time_sunset_civil"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginEnd="@dimen/table_set_rightMargin"
                        android:layout_marginRight="@dimen/table_set_rightMargin"
                        android:textColor="?attr/table_settingColor"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_time_label_civil"
                        app:layout_constraintEnd_toEndOf="@+id/header_time_sunset"
                        android:text="6:30 PM"/>

                    <!-- Official -->
                    <TextView
                        android:id="@+id/text_time_label_official"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginBottom="@dimen/table_cell_spacing"
                        android:layout_marginTop="@dimen/table_cell_spacing"
                        android:text="@string/timeMode_official_short"
                        app:layout_constraintTop_toBottomOf="@+id/text_time_sunset_civil"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/text_time_sunrise_actual"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginEnd="@dimen/table_rise_rightMargin"
                        android:layout_marginRight="@dimen/table_rise_rightMargin"
                        android:textColor="?attr/table_risingColor" android:textSize="?attr/text_size_large"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_time_label_official"
                        app:layout_constraintEnd_toEndOf="@+id/header_time_sunrise"
                        android:text="6:00 AM"/>

                    <TextView
                        android:id="@+id/text_time_sunset_actual"
                        style="@style/SunsetTimeTextView"
                        android:layout_marginEnd="@dimen/table_set_rightMargin"
                        android:layout_marginRight="@dimen/table_set_rightMargin"
                        android:textColor="?attr/table_settingColor" android:textSize="?attr/text_size_large"
                        app:layout_constraintBaseline_toBaselineOf="@+id/text_time_label_official"
                        app:layout_constraintEnd_toEndOf="@+id/header_time_sunset"
                        android:text="6:00 PM"/>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/text_layout"
        android:orientation="vertical" android:gravity="center_horizontal|bottom"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="2">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <ToggleButton android:id="@+id/button_theme_system" android:theme="@style/SystemThemeButton"
                android:textOn="@string/appThemes_systemDefault" android:textOff="@string/appThemes_systemDefault"
                android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="64dp">

                <ToggleButton android:id="@+id/button_theme_dark" android:theme="@style/DarkThemeButton"
                    android:textOn="@string/appThemes_darkTheme" android:textOff="@string/appThemes_darkTheme"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />

                <ToggleButton android:id="@+id/button_theme_light" android:theme="@style/LightThemeButton"
                    android:textOn="@string/appThemes_lightTheme" android:textOff="@string/appThemes_lightTheme"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:gravity="start" android:layout_marginTop="48dp" android:layout_marginBottom="8dp" android:layout_gravity="start"
            android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="?attr/text_size_small"
            android:text="@string/configLabel_ui_textsize" />

        <RadioGroup
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/radio_text_small"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:textSize="@dimen/smalltext_size_small"
                android:text="@string/textSize_small" />

            <RadioButton android:id="@+id/radio_text_normal"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:text="@string/textSize_normal" />

            <RadioButton android:id="@+id/radio_text_large"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:textSize="@dimen/largetext_size_small"
                android:text="@string/textSize_large" />
        </RadioGroup>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>