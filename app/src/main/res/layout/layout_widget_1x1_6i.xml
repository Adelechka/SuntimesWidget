<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    style="@style/SunsetTimeWidget"
    android:id="@+id/widgetframe_inner"
    android:layout_height="match_parent">

    <TextView style="@style/SunsetTimeTextTitleView"
        android:id="@+id/text_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="start" android:visibility="visible"
        tools:text="title" android:layout_marginBottom="2dp" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_gravity="center" android:orientation="vertical"
        android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
        android:layout_marginRight="2dp" android:layout_marginEnd="2dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="right|end|center_vertical">

            <TextView style="@style/SunsetTimeTextView" android:visibility="visible"
                android:id="@+id/info_sun_declination_current_label"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                android:text="@string/widgetLabel_declination_short" android:labelFor="@+id/info_sun_declination_current"
                android:gravity="start" />

            <TextView style="@style/SunsetTimeTextView" android:gravity="end|right"
                android:id="@+id/info_sun_declination_current"
                android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
                android:text="" tools:text="48" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="right|end|center_vertical">

            <TextView style="@style/SunsetTimeTextView" android:visibility="visible"
                android:id="@+id/info_sun_rightascension_current_label"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                android:text="@string/widgetLabel_rightAscension_short" android:labelFor="@+id/info_sun_rightascension_current"
                android:gravity="start" />

            <TextView style="@style/SunsetTimeTextView"  android:gravity="end|right"
                android:id="@+id/info_sun_rightascension_current"
                android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
                android:text="" tools:text="280" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>