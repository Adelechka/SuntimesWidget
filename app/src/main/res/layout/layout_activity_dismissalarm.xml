<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical" android:padding="16dp">

		<TextView
			style="@style/TextAppearance.AppCompat.Large"
			android:id="@+id/txt_alarm_label"
			android:layout_width="0dp" android:layout_height="wrap_content"
			android:gravity="center" app:layout_constraintVertical_weight="1"
			app:layout_constraintVertical_chainStyle="spread"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/txt_alarm_label2"
			tools:text="Alarm" />

		<TextView
			style="@style/TextAppearance.AppCompat.Medium"
			android:id="@+id/txt_alarm_label2"
			android:layout_width="0dp" android:layout_height="wrap_content"
			android:gravity="center" app:layout_constraintVertical_weight="1"
			app:layout_constraintVertical_chainStyle="spread"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/txt_alarm_label"
			app:layout_constraintBottom_toTopOf="@+id/icon_alarm"
			tools:text="Sunrise" />

		<ImageView android:id="@+id/icon_alarm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_alarm_huge"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/txt_alarm_label"
			app:layout_constraintBottom_toTopOf="@+id/txt_alarm_time"
			tools:ignore="ContentDescription" />

		<TextView android:id="@+id/txt_alarm_time"
			style="@style/SunsetTimeTextView" android:textSize="56sp"
			android:layout_width="0dp" app:layout_constraintVertical_weight="2"
			android:layout_height="wrap_content" android:gravity="center"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/icon_alarm"
			app:layout_constraintBottom_toTopOf="@+id/btn_snooze"
			tools:text="00:00 AM" />

		<Button android:id="@+id/btn_snooze"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="0dp" android:layout_height="125dp"
			android:text="@string/alarmAction_snooze"
			android:drawableTop="?attr/icActionAlarm" android:gravity="top|center_horizontal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/btn_dismiss"
			app:layout_constraintHorizontal_chainStyle="spread"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/txt_alarm_time" />

		<Button android:id="@+id/btn_dismiss"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="0dp" android:layout_height="125dp"
			android:text="@string/alarmAction_dismiss"
			android:drawableTop="?attr/icActionDismiss" android:gravity="top|center_horizontal"
			app:layout_constraintTop_toTopOf="@+id/btn_snooze"
			app:layout_constraintBottom_toBottomOf="@+id/btn_snooze"
			app:layout_constraintStart_toEndOf="@+id/btn_snooze"
			app:layout_constraintEnd_toEndOf="parent" />

	</android.support.constraint.ConstraintLayout>
</merge>
