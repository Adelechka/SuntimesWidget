<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/SunsetTimeWidget_dark"
        android:layout_marginBottom="@dimen/settingsGroup_margin">

        <TextView style="@style/SunsetTimeSettingsGroupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/configLabel_timezone" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="16dp" android:paddingLeft="16dp" android:paddingTop="@dimen/settingsGroup_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/configLabel_timezone_mode" />

            <Spinner android:id="@+id/appwidget_timezone_mode" android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="16dp" android:paddingLeft="16dp" android:paddingTop="8dp">

            <TextView android:id="@+id/appwidget_timezone_custom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/configLabel_timezone_custom" />

            <Spinner android:id="@+id/app_widget_timezone_custom" android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</merge>