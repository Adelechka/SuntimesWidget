<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/griditem"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg_widget_dark"
    android:baselineAligned="false">

    <TextView
        style="@style/SunsetTimeTextTitleView"
        android:id="@android:id/text1"
        android:maxLines="2"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:duplicateParentState="true"
        android:paddingTop="0dp" android:paddingBottom="0dp"
        android:gravity="center"
        tools:text="Theme Name Long Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_sunrise"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/time_loading"
        tools:layout_editor_absoluteX="8dp"/>

    <ImageView
        android:id="@+id/icon_sunrise"
        android:layout_width="24dp" android:layout_height="12dp"
        android:layout_margin="1dp"
        android:background="@drawable/ic_sunrise"
        android:cropToPadding="true"

        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/icon_sunset"

        app:layout_constraintStart_toEndOf="@android:id/text1"
        app:layout_constraintEnd_toEndOf="parent"

        tools:ignore="contentDescription" />

    <ImageView
        android:id="@+id/icon_sunset"
        android:layout_width="24dp" android:layout_height="12dp"
        android:background="@drawable/ic_sunset"
        android:layout_margin="1dp"

        app:layout_constraintTop_toBottomOf="@+id/icon_sunrise"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@+id/icon_sunrise"
        app:layout_constraintEnd_toEndOf="@+id/icon_sunrise"

        tools:ignore="contentDescription" />

</android.support.constraint.ConstraintLayout>