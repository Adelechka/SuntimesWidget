<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- background (night) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp"
        android:id="@+id/lightmap_bg">
        <shape android:shape="rectangle">
            <size android:width="@dimen/graph_width" android:height="@dimen/graph_height" />
            <solid android:color="@color/graph_night" />
        </shape>
    </item>

    <!-- astro twilight -->
    <item android:top="0dp" android:bottom="0dp" android:left="5dp" android:right="5dp"
          android:id="@+id/lightmap_astro">
        <shape android:shape="rectangle">
            <size android:width="@dimen/graph_width" android:height="@dimen/graph_height" />
            <solid android:color="@color/graph_astro" />
        </shape>
    </item>

    <!-- nautical twilight -->
    <item android:top="0dp" android:bottom="0dp" android:left="10dp" android:right="10dp"
          android:id="@+id/lightmap_nautical">
        <shape android:shape="rectangle">
            <size android:width="@dimen/graph_width" android:height="@dimen/graph_height" />
            <solid android:color="@color/graph_nautical" />
        </shape>
    </item>

    <!-- civil twilight -->
    <item android:top="0dp" android:bottom="0dp" android:left="143dp" android:right="143dp"
          android:id="@+id/lightmap_civil">
        <shape android:shape="rectangle">
            <size android:width="@dimen/graph_width" android:height="@dimen/graph_height" />
            <solid android:color="@color/graph_civil" />
        </shape>
    </item>

    <!-- foreground (day) -->
    <item android:top="0dp" android:bottom="0dp" android:left="280dp" android:right="280dp"
          android:id="@+id/lightmap_day">
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="@dimen/graph_height" />
            <solid android:color="@color/graph_day" />
        </shape>
    </item>

</layer-list>